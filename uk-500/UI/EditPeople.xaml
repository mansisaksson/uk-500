<UserControl x:Class="uk_500.EditPeople"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uk_500"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="FirstNameField" Height="20" VerticalAlignment="Top" Margin="86,10,10,0"></TextBox>
        <TextBox x:Name="LastNameField" Height="20" VerticalAlignment="Top" Margin="86,42,10,0"></TextBox>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="75" Click="SearchButton_Click"/>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="91"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Height="32" Width="91"/>
        <ListBox x:Name="ResultField" Margin="0,108,0,0" SelectionChanged="ResultField_SelectionChanged"/>
    </Grid>
</UserControl>
